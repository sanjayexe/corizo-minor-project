<html lang="en">
<%- include("./partials/head.ejs") %>

  <head>
    <%- include("./partials/bootstrap.ejs") %>
  </head>

  <body class="container mt-5 bg-dark text-light">
    <%- include("./partials/nav.ejs") %>

      <a href="/user/create"> <button class="btn-success btn mb-3">Add-User</button></a>
      <div class="blogs content">
        <h2>All Users</h2>

        <% if (users.length> 0) { %>
          <% users.forEach(eachuser=> { %>
            <a class="single" href="/users/<%= eachuser.id %>">
              <h3 class="title">
                <%= eachuser.name %>
              </h3>
              <p class="text-light">
                <%= eachuser.email%>
              </p>
            </a>
            <% }) %>
              <% } else { %>
                <p>There are no users to display...</p>
                <% } %>

      </div>

      <%- include("./partials/footer.ejs") %>
  </body>

</html>